{
  "name": "thw-tools-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "cd apps/backend && pnpm run start:dev",
    "dev:thw-tools": "cd apps/thw-tools && pnpm run dev",
    "dev:inventar": "cd apps/inventar && pnpm run dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:thw-tools\" \"pnpm dev:inventar\"",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=thw-tools-backend",
    "build:thw-tools": "turbo run build --filter=thw-tools",
    "build:inventar": "turbo run build --filter=thw-inventar",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,svelte,js,jsx,json}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "turbo": "^2.0.0"
  }
}
