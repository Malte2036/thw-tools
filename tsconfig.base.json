{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@thw-tools/web-components/*": ["packages/web-components/*"],
      "@thw-tools/shared/*": ["packages/shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
